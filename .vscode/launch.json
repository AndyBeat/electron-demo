  "version": "1.0.0",
  "configurations": [
    {
      "name": "Run with dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "runtimeExecutable": "pnpm",
      "console": "integratedTerminal"
    },
    {
      "name": "Run with build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "run",
        "build"
      ],
      "runtimeExecutable": "pnpm",
      "console": "integratedTerminal"
    },
    {
      "name": "Run with lint",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "run",
        "lint"
      ],
      "runtimeExecutable": "pnpm",
      "console": "integratedTerminal"
    },
    {
      "name": "Run with lint fix",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "run",
        "lint:fix"
      ],
      "runtimeExecutable": "pnpm",
      "console": "integratedTerminal"
    }
  ]
}
